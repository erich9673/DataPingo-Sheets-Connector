{
  "name": "datapingo-sheets-connector",
  "version": "1.0.0",
  "description": "DataPingo Sheets Connector - Real-time Google Sheets to Slack monitoring with instant notifications",
  "main": "server.js",
  "scripts": {
    "start": "echo 'Starting DataPingo Backend directly...' && cd sheets-connector-backend && node dist/server.js",
    "build": "npm run install:deps && npm run build:backend && npm run build:frontend",
    "install:deps": "cd sheets-connector-backend && npm install && cd ../sheets-connector-app && npm install",
    "build:backend": "cd sheets-connector-backend && npx tsc",
    "build:frontend": "cd sheets-connector-app && npm run build",
    "railway:start": "node railway-server.js",
    "railway:build": "npm run build",
    "dev": "cd sheets-connector-backend && npm run dev",
    "frontend": "cd sheets-connector-app && npm start"
  },
  "keywords": [
    "google-sheets",
    "slack",
    "monitoring",
    "real-time",
    "datapingo",
    "automation",
    "webhooks",
    "notifications"
  ],
  "author": "DataPingo",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/erichuang2003/DataPingo-Sheets-Connector.git"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-session": "^1.18.1",
    "googleapis": "^126.0.1",
    "http-proxy-middleware": "^3.0.5",
    "node-cron": "^3.0.2",
    "node-fetch": "^2.7.0",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/node": "^20.0.0",
    "@types/node-fetch": "^2.6.4",
    "@types/uuid": "^9.0.2",
    "typescript": "^5.2.2",
    "webpack-cli": "^6.0.1"
  }
}
