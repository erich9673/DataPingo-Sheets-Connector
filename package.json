{
  "name": "datapingo-sheets-connector",
  "version": "1.0.0",
  "description": "DataPingo Sheets Connector - Real-time Google Sheets to Slack monitoring with instant notifications",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "build": "echo 'Railway build: Installing backend dependencies...' && cd sheets-connector-backend && npm ci --only=production",
    "railway:start": "node server.js",
    "railway:build": "cd sheets-connector-backend && npm ci --only=production",
    "dev": "cd sheets-connector-backend && npm run dev",
    "frontend": "cd sheets-connector-app && npm start"
  },
  "keywords": [
    "google-sheets",
    "slack",
    "monitoring",
    "real-time",
    "datapingo",
    "automation",
    "webhooks",
    "notifications"
  ],
  "author": "DataPingo",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/erichuang2003/DataPingo-Sheets-Connector.git"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "body-parser": "^1.20.2",
    "sqlite3": "^5.1.6",
    "dotenv": "^16.3.1",
    "googleapis": "^126.0.1",
    "node-cron": "^3.0.2",
    "node-fetch": "^2.7.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "typescript": "^5.2.2",
    "@types/node": "^20.0.0",
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/node-fetch": "^2.6.4",
    "@types/uuid": "^9.0.2"
  }
}
